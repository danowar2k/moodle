    Example context (json):
    {
        "loginUrl": "https://moodle.org/login/index.php",
        "sUsername": "sgjhsiognoisn565",
        "loginViaEmail": true,
        "rememberUsername": true,
        "usernameSet": "afhguaetaufgab",
        "loginToken": "ahfgioaen35n1235nb1ib",
        "signup": "https://moodle.org/login/signup.php",
        "forgot": "https://moodle.org/login/forgot_password.php",
        "potentialidps": [
            {
                "url": "https://my.example-idp.com",
                "name": "My personal IdP",
                "iconurl": "https://moodle.org/favicon.ico"
            }
        ]
