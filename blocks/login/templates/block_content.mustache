}}

<form class="loginform" id="login" method="post" action="{{{ loginUrl }}}">
    {{>block_login/username}}
    {{>block_login/password}}
    {{>block_login/rememberUsername}}
    {{>block_login/submit}}
    <input type="hidden" name="logintoken" value="{{loginToken}}" />
</form>
{{>block_login/signup}}
{{>block_login/forgot}}
{{>block_login/potentialIdps}}
