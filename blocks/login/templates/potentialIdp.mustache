{{!
    @template block_login/potentialIdp

    This template renders a IdP login button

    Example context (json):
    {
        "url": "https://my.example-idp.com",
        "name": "My personal IdP",
        "iconurl": "https://moodle.org/favicon.ico"
    }

}}
<div class="potentialidp">
    <a class="btn btn-default btn-block" href="{{{ url }}}" title="{{ name }}">
        {{#iconurl}}
            <img src="{{{ . }}}" alt="{{ name }} {{#str}}icon{{/str}}" width="24" height="24" class="m-r-1"/>
        {{/iconurl}}
        {{name}}
    </a>
</div>
